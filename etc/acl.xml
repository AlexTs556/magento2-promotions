<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Kodano_Promotions::promotions" title="Manage Promotions" sortOrder="10">
                    <resource id="Kodano_Promotions::promotion_list" title="View Promotions List" sortOrder="10"/>
                    <resource id="Kodano_Promotions::promotion_add" title="Add Promotion" sortOrder="20"/>
                    <resource id="Kodano_Promotions::promotion_delete" title="Delete Promotion" sortOrder="30"/>
                </resource>

                <resource id="Kodano_Promotions::promotion_groups" title="Manage Promotion Groups" sortOrder="20">
                    <resource id="Kodano_Promotions::group_list" title="View Promotion Groups List" sortOrder="10"/>
                    <resource id="Kodano_Promotions::group_add" title="Add Promotion Group" sortOrder="20"/>
                    <resource id="Kodano_Promotions::group_delete" title="Delete Promotion Group" sortOrder="30"/>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
